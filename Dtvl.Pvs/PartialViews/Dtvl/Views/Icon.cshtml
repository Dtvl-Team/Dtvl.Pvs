@model PvOption<DtvlPvs>
@{
    Model.WithParentTag("v-icon")
        .FillSlotFromDefault(IconSlot.Icon)
        .AddParentAttr(new
        {
            @class = "Icon",
        });

    if (Model.TryGetSlotContent(IconSlot.Icon, out var IconContent))
        Model.AddParentAttr("v-bind:icon", $"'{IconContent}'");

    if (Model.TryGetSlotContent(IconSlot.Color, out var ColorContent))
        Model.AddParentAttr("v-bind:color", $"'{ColorContent}'");
}