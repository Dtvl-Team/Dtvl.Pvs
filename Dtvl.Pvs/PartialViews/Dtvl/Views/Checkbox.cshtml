@model PvOption<DtvlPvs>

@{
    Model.WithParentTag("v-checkbox")
        .FillSlotFromDefault(CheckboxSlot.Label)
        .AddParentAttr("hide-details")
        .AddParentAttr(new
        {
            Label = Model.GetSlotContent(CheckboxSlot.Label),
            density = "compact",
            @class = "Checkbox",
        });
}